with st.form("date_filter_form"):
        #co2 = st.columns(1)[0]  # Use a new name for the third column
        with co2:
        # Date range input
            date_range = st.date_input("Pick a date range", (startDate.date(), endDate.date()))

            # "Apply Filter" button
            submitted_filter = st.form_submit_button("Apply Filter")

    # Check if the date filter form was submitted
    if submitted_filter:
        # Check the length of the date_range
        if isinstance(date_range, tuple) and len(date_range) == 2:
            # Extract start and end dates from the selected date range
            start, end = date_range

            # Convert date to datetime for comparison
            start = pd.to_datetime(start)
            end = pd.to_datetime(end)

            # Apply the filter to the data
            sett_audit = sett_audit[(sett_audit["SETTLEMENT_DATE"] >= start) & (sett_audit["SETTLEMENT_DATE"] <= end)].copy()
            df12 = df12[(df12["SETTLEMENT_DATE"] >= start) & (df12["SETTLEMENT_DATE"] <= end)].copy()
            df_sett_ops_main = df_sett_ops_main[(df_sett_ops_main["SETTLEMENT_DATE"] >= start) & (df_sett_ops_main["SETTLEMENT_DATE"] <= end)].copy()
            df_sett_curr = df_sett_curr[(df_sett_curr["SETTLEMENT_DATE"] >= start) & (df_sett_curr["SETTLEMENT_DATE"] <= end)].copy()
            #df10 = df10[(df10["SETTLEMENT_DATE"] >= date1) & (df10["SETTLEMENT_DATE"] <= date2)].copy()
            #df11 = df11[(df11["SETTLEMENT_DATE"] >= date1) & (df11["SETTLEMENT_DATE"] <= date2)].copy()
            sett_audit4 = sett_audit4[(sett_audit4["SETTLEMENT_DATE"] >= start) & (sett_audit4["SETTLEMENT_DATE"] <= end)].copy()
        else:
            # Handle the case when only one date is selected
            st.write("Please select both start and end dates.")
