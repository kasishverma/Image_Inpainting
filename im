date1, date2 = pd.to_datetime('2023-07-01'), pd.to_datetime('2023-07-05')

    with st.form("date_filter_form"):
        date1 = st.date_input("Pick the start date", date1)

    # Calculate max date allowed for date2 (30 days from date1)
        max_date_allowed_date2 = date1 + timedelta(days=30)

        # Date input for date2, limited to be within the next 30 days from date1
        date2 = st.date_input("Pick the end date", date2, min_value=date1, max_value=max_date_allowed_date2)

        # "Apply Filter" button
        submitted_filter = st.form_submit_button("Apply Filter")
    if submitted_filter:
    # Convert date to datetime for comparison
        date1 = pd.to_datetime(date1)
        date2 = pd.to_datetime(date2)
